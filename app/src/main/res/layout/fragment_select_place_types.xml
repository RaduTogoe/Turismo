<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_atm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATM" />
        <CheckBox
            android:id="@+id/checkbox_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank" />
        <CheckBox
            android:id="@+id/checkbox_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital" />
        <CheckBox
            android:id="@+id/checkbox_pharmacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy" />
        <CheckBox
            android:id="@+id/checkbox_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Police" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food and Drinks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant" />
        <CheckBox
            android:id="@+id/checkbox_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe" />
        <CheckBox
            android:id="@+id/checkbox_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar" />
        <CheckBox
            android:id="@+id/checkbox_bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bakery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_movie_theater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Theater" />
        <CheckBox
            android:id="@+id/checkbox_amusement_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amusement Park" />
        <CheckBox
            android:id="@+id/checkbox_night_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night Club" />
        <CheckBox
            android:id="@+id/checkbox_zoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_clothing_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing Store" />
        <CheckBox
            android:id="@+id/checkbox_shopping_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping Mall" />
        <CheckBox
            android:id="@+id/checkbox_book_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Store" />
        <CheckBox
            android:id="@+id/checkbox_grocery_or_supermarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery or Supermarket" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_train_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Station" />
        <CheckBox
            android:id="@+id/checkbox_bus_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Station" />
        <CheckBox
            android:id="@+id/checkbox_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airport" />
        <CheckBox
            android:id="@+id/checkbox_subway_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subway Station" />

        <!-- Add more categories and checkboxes as needed -->

        <Button
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
